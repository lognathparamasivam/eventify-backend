{
  "name": "eventify-backend",
  "version": "1.0.0",
  "description": "Event Planning & Managment System",
  "main": "index.js",
  "scripts": {
    "start:dev": "NODE_ENV=dev nodemon src/app.ts",
    "start:test": "NODE_ENV=test nodemon src/app.ts",
    "start": "NODE_ENV=production nodemon src/app.ts",
    "lint": "gts lint",
    "clean": "gts clean", 
    "test:integration": "jest  --runInBand --coverage --detectOpenHandles --forceExit src/test/integration/integration.test.ts",
    "test:unit": "jest  --runInBand --coverage --detectOpenHandles --forceExit src/test/unit",
    "test": "jest --runInBand --coverage --detectOpenHandles --forceExit --passWithNoTests",
    "coverage": "npx nyc --reporter=lcov --report-dir=coverage npm test",
    "docker:build": "docker build -t eventify-backend .",
    "docker:run": "docker run -p 3000:3000 -e NODE_ENV=dev eventify-backend",
    "migrate:generate": "NODE_ENV=dev typeorm-ts-node-commonjs migration:generate -d src/database/datasource.ts"

  },
  "keywords": [],
